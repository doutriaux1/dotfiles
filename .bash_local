# Given a dir list most recent file
# extra args are files to exclude/ignore
function mostrecentdir {
    DIRS=`ls -lrt $1 | awk '{print $9}'`
    EXCLUDES=${@:2}
    for EXCLUDE in $EXCLUDES
        do
            DIRS=`echo $DIRS | sed "s/${EXCLUDE}//g"`
        done
    echo `echo ${DIRS} | tr " " "\n" | tail -n1`

}

