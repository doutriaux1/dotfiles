# old setpy for cmake builds of uvcdat
setpy_cmake() {
 if [ $# == 0 ]; then
   pth=$(mostrecentdir ${CDATBUILDS})
 else
   pth=$1
 fi
 unset UVCDAT_SETUP_PATH
 unset OPAL_PREFIX
 echo "Using "${pth}" Python"
